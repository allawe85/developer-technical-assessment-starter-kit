{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"] 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "generated", "prisma.config.ts"]  // changed: exclude generated files
}